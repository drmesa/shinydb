<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nothingtothetable.shinydb.dao.MonDao">
    <select id="read" parameterType="long" resultType="DomainMon">
        SELECT
            id,
            dex_number as dexId,
            form,
            name
        FROM mon
        WHERE id = #{id}
    </select>

    <select id="filter" parameterType="DomainMonFilter" resultType="DomainMon">
        SELECT
            id,
            dex_number as dexId,
            form,
            name
        FROM mon
        WHERE
            1 = 1
        <if test="ids != null">
            AND id in
            <foreach item="ids" index="index" collection="ids" open="(" separator="," close=")">
                #{ids}
            </foreach>
        </if>
        <if test="dexNums != null">
            AND dex_number in
            <foreach item="dexNums" index="index" collection="dexNums" open="(" separator="," close=")">
                #{dexNums}
            </foreach>
        </if>
        <if test="names != null">
            AND name in
            <foreach item="names" index="index" collection="names" open="(" separator="," close=")">
                #{names}
            </foreach>
        </if>
    </select>

    <insert id="create">
        INSERT INTO mon
            (dex_number, form, name)
        VALUES
            (#{dexId}, #{form}, #{name})
    </insert>

    <update id="update">
        UPDATE mon SET
            <!-- conditional sql -->
        WHERE
            id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM mon
        WHERE
            id = #{id}
    </delete>
</mapper>
